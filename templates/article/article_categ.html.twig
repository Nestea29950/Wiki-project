{% extends 'base.html.twig' %}
{% block body %}
	<div class="container mt-5 text-center">
		<div class="row">
			<style>
				.hover:hover {
					transform: scale(1.03);
					cursor: pointer;
				}
			</style>
			<h3>Articles de la catégorie selectionné<e></e>e></e>
		</h3>
		{% for article in articles %}

			<a href="/articles/{{ article.id }}" class="col-6 hover">
				<div class="card  text-center mb-4">
					<div class="iconbox iconbox__style-02 mt-4">
						<div>
							<div class="card-body">
								<h5 class="card-title">{{ article.titre }}</h5>
							</div>
						</div>
					</div>
				</div>
			</a>

		{% endfor %}
	</div>
</div>{% endblock %}
