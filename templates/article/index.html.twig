{% extends 'base.html.twig' %}


{% block body %}
	<div class="container">
		{% if app.user %}
			<div class="d-flex justify-content-center">
				<a href="/admin/article/create" class="btn btn-outline-primary text-decoration-none">Ajouter un article</a>
			</div>
		{% endif %}
		<br></br>
	<style>
		.hover:hover {
			transform: scale(1.03);
			cursor: pointer;
		}
	</style>
	<div style="text-align:center;">
		{{ nbarticles }}
		au total dans la cat√©gorie</div>

	<div class="row d-flex justify-content-center">
		{% for article in articles %}
			<a href="/article/{{article.id}}" class="col-5 m-2 text text-decoration-none">
				<div class="card flex justify-content-center align-items-center">

					<div class="card-body">

						<h5 class="card-title">{{ article.titre }}</h5>
						<div>Auteur :
							{{article.user}}</div>

					</div>
				</div>
			</a>
		{% endfor %}
	</div>
</div>{% endblock %}
