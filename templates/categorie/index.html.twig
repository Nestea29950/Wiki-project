{% extends 'base.html.twig' %}


{% block body %}
	<div class="container mt-5 text-center ">
		{% if app.user %}

			<a href="/admin/categorie/create" class="btn btn-outline-primary text-decoration-none">Ajouter une cat√©gorie</a>
		{% endif %}

		<br></br>
	<div class="flex-row">
