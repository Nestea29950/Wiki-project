                                <a href="/categorie/{{ categorie.id }}/edit" class="p-0 m-0">Modifier</a>
                                <a href="/categorie/{{ categorie.id }}/delete" class="p-0 m-0">Supprimer</a>
                            </div>
                        </div>
                    </div>
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %}
