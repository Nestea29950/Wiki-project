{% extends 'base.html.twig' %}


{% block body %}
<div class="container mt-5 text-center ">

        <a href="/admin/categorie/create" class="btn btn-outline-primary">Ajouter une cat√©gorie</a>
        <br></br>
    <div class="flex-row">
        <style>
            .hover:hover {
                transform: scale(1.03);
                cursor: pointer;
            }
        </style>

        {% for categorie in categories %}
             <a href="/articles/{{categorie.id}}">
            <div class="card  text-center col-5 ">

                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.nom }}</h5>
